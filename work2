                    ];

                    // กำหนดคำตอบเริ่มต้นให้ทุกข้อเป็น null
                    this.answers = Array(this.quizData.length).fill(null);
                },
                // ฟังก์ชันตรวจคำตอบ
                checkAnswers() {
                    let score = 0;
                    this.quizData.forEach((quiz, index) => {
                        if (this.answers[index] === quiz.answer) {
                            score++;
                        }
                    });
                    this.score = score;
                    this.showScore = true;
                }
            }
        });

        app.use(vuetify).mount('#app');
